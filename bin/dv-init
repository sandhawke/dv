#!/bin/bash
source $(dv-path lib/common.sh) # -*-mode: sh-mode -*-

if [ -d .dv ]; then
    log_info there is a .dv here so skipping init
    exit 0
fi

if [ -d .git ]; then
    dv-git-assert-clean
else
    git init --quiet
fi

# TODO: only add if missinge

echo "# used by dv but not good to store in repo
.dv
_from_developer
_to_developer

# hack for dv, because this changes in places where it's hard to commit
package-lock.json
" >> .gitignore

mkdir -p .dv
mkdir docs || true
mkdir notes || true

git add -A
git commit --quiet -m'dv-init'

log_success "Setup complete. Consider:

$EDITOR docs/user-request.md
dv-edit-spec-create
dv-edit -p'whatever you want it to do'

"
