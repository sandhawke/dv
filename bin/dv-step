#!/bin/bash
#  --mode: sh-mode --
set -euo pipefail

if [ ! -d 'docs/coding-environment' -o ! -f 'README.md' ]; then
    echo "Expecting to run where there's ./docs/coding-environment/* and ./README.md" >&2
    exit 1
fi

dv-version-create --exec=dv-coding-raw-step latest

echo 'consider:
 git show --stat          # summary of what changed
 git show                 # full diff
 git reset --soft HEAD~1  # uncommit, so you can revise a bit
 git reset --hard HEAD~1  # complete undo that step
'
