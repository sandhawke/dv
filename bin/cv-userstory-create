#!/bin/bash
source $(dv-path lib/common.sh) # -*-mode: sh-mode -*-

dv-git-assert-clean

if [ -f docs/user-request.md ]; then
    log_error already exists, use -edit instead
fi

echo 'Enter your user story or general request for this new
software (ctl-d when done)'
cat > docs/user-request.md

git add docs/user-request.md
git commit -q -m'user provided initial story'

