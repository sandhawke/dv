#!/bin/bash
# -*- mode: sh-mode -*-
set -euo pipefail

################################################################
# Temporary wrapper to use jjmin instead
################################################################

# Function to display usage information
usage() {
    echo "Usage: llpipe [new|more]"
    echo "  new   - Calls jjmin"
    echo "  more  - Calls jjmin --more"
}

# Check if an argument is provided
if [ $# -eq 0 ]; then
    usage
    exit 1
fi

# Process the command
case "$1" in
    new)
        jjmin
        ;;
    more)
        jjmin --more
        ;;
    *)
        echo "Error: Unknown command '$1'"
        usage
        exit 1
        ;;
esac
