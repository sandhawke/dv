#!/bin/bash
#  --mode: sh-mode --
set -euo pipefail

dv-version-create --exec=${1:=dv-patch} latest

echo 'consider:
 git show --stat          # summary of what changed
 git show                 # full diff
 git reset --soft HEAD~1  # uncommit, so you can revise a bit
 git reset --hard HEAD~1  # completely undo those changes
'
