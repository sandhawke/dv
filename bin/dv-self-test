#!/bin/bash

# Check if arguments are provided
if [ $# -eq 0 ]; then
    echo "Usage: $0 [group] <command1> [command22 ...]"
    echo ""
    echo "groups: FILE, TEXT, EASY, HARD, EXTREME, ALL"
    echo "Example: $0 cat tee"
    echo "Example: $0 FILE"
    exit 1
fi

run() {
  local cmd=$1
  echo TESTING $cmd
  echo '<done>'
}

for arg in "$@"; do
    matched=''
    if [ "$arg" == "EASY" -o "$arg" == "ALL" ]; then
      for i in tee; do run "$i"; done
      matched=1
    fi
    if [ "$arg" == "HARD" -o "$arg" == "ALL" ]; then
      for i in grep find tar awk gzip; do run "$i"; done
      matched=1
    fi
    if [ "$arg" == "EXTREME" -o "$arg" == "ALL" ]; then
      for i in ffmpeg busybox bash gcc python; do run "$i"; done
      matched=1
    fi
    if [ "$arg" == "FILE" -o "$arg" == "ALL" ]; then
      for i in chmod cp dd df du ln ls mkdir mv touch; do run "$i"; done
      matched=1
    fi
    if [ "$arg" == "TEXT" -o "$arg" == "ALL" ]; then
      for i in cat cut head od sort split tail tr uniq wc; do run "$i"; done
      matched=1
    fi
    if [ -n "$matched" ]; continue
    if man "$arg" > /dev/null; then
      run "$arg"
    else
      echo "... skipping '$arg'"
    fi   
done
